import Layout from '../../layouts/Layout.astro';
import Search2 from '../../components/Search.jsx';
const { search } = Astro.params;

const url = `https://api.themoviedb.org/3/search/movie?query=${search}&include_adult=false&language=en-US&page=1`;
const options = {
  method: 'GET',
  headers: {
    accept: 'application/json',
    Authorization: 'Bearer eyJhbGciOiJIUzI1NiJ9.eyJhdWQiOiI4MGM5ODdlZWVlNmZkOWJlODA3ZmJjZTQ5ZWVhMTFkNCIsIm5iZiI6MTc2MDgwMTE4NC4zMTUsInN1YiI6IjY4ZjNiMWEwZTMzNTBiMTljMTc4ZTBiMyIsInNjb3BlcyI6WyJhcGlfcmVhZCJdLCJ2ZXJzaW9uIjoxfQ.koAcVPSsylstzzDbNlfZ7T88OOduXwuMqabb-C3tclY'
  }
};

const data = await fetch(url, options);
const movies = await data.json();
const detail = '/detail/'
const imgPath = 'https://image.tmdb.org/t/p/w500'
---

<Layout>
    <Search2 client:load/>
    <div class="row">
        {
        movies.results.map((item: any) => (
            <div class="col-lg-3">
                <div class="card mt-4" style="width: 18rem">
                    <a href={detail + item.id}>
                        <img src={imgPath + item.poster_path} alt="poster" class="card-img-top">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{item.title}</h5>
                    </div>
                </div>
            </div>
        ))
        }
    </div>
</Layout>